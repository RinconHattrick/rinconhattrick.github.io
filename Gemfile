source "https://rubygems.org"

# Usa github-pages en lugar de jekyll directamente
gem "github-pages", group: :jekyll_plugins

# Plugins necesarios
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Necesario para desarrollo local
gem "webrick", "~> 1.7"
