---
layout: null
permalink: /assets/json/search.json
---
[
  {% for post in site.posts %}
  {% if post.published %}
    {
      "title": {{ post.title | jsonify }},
      "url": {{ post.url | relative_url | jsonify }},
      "excerpt": {{ post.excerpt | strip_newlines | escape | jsonify }},
      "category": {{ post.categories | jsonify }},
      "date": {{ post.date | date: "%Y-%m-%d" | jsonify }},
      "image": {{ post.image | default: "/assets/img/default.webp" | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endif %}
  {% endfor %}
]
